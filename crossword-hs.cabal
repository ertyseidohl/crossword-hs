build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  hs-source-dirs: src
  build-depends:
    base >=4.12 && <4.13
    , wai
    , warp
    , http-types
    , containers
    , directory
    , sqlite-simple
  exposed-modules:
    Crossword
    WordLoader
    LanguageMachine
    WordTrie
    Database
  default-language: Haskell2010

executable server
  main-is: app/Server.hs
  build-depends:
    base >=4.12 && <4.13
    , wai
    , warp
    , http-types
    , utf8-string
    , bytestring
    , crossword-hs
    , sqlite-simple
  default-language:    Haskell2010

executable crossword-repl
  main-is: app/CrosswordRepl.hs
  build-depends:
    base >=4.12 && <4.13
    , containers
    , directory
    , crossword-hs
  -- hs-source-dirs:
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs:
      test
  ghc-options: -Wall
  build-depends:
      base
    , containers
    , directory
    , hspec
    , QuickCheck
    , crossword-hs
    , sqlite-simple
  other-modules:
    CrosswordSpec
    , WordLoaderSpec
    , LanguageMachineSpec
    , WordTrieSpec
    , DatabaseSpec
  default-language: Haskell2010
  build-tool-depends: hspec-discover:hspec-discover
